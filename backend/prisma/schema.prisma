// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPPLIER
  CUSTOMER
}

enum UserStatus {
  PENDING_APPROVAL
  ACTIVE
  REJECTED
  BLOCKED
}

enum PlacementType {
  HERO
  FEATURED
  LISTING
  BANNER
}

enum PlacementStatus {
  PENDING
  APPROVED
  REJECTED
  ACTIVE
  INACTIVE
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(CUSTOMER)
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products       Product[]
  orders         Order[]
  adminActions   AdminActionLog[] @relation("AdminActions")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  stock       Int      @default(0)
  category    String
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  supplierId  String
  supplier    User     @relation(fields: [supplierId], references: [id])

  placements  ProductPlacement[]
  orderItems  OrderItem[]
}

model ProductPlacement {
  id             String          @id @default(uuid())
  placementType  PlacementType
  status         PlacementStatus @default(PENDING)
  price          Float           @default(0)
  priorityOrder  Int             @default(0)
  
  startDate      DateTime?
  endDate        DateTime?
  
  productId      String
  product        Product         @relation(fields: [productId], references: [id])

  history        ProductPlacementHistory[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ProductPlacementHistory {
  id               String          @id @default(uuid())
  placementId      String
  placement        ProductPlacement @relation(fields: [placementId], references: [id])
  
  previousStatus   PlacementStatus?
  newStatus        PlacementStatus
  changedById      String
  reason           String?
  
  createdAt        DateTime @default(now())
}

model Order {
  id          String      @id @default(uuid())
  totalAmount Float
  status      OrderStatus @default(PENDING)
  
  buyerId     String
  buyer       User        @relation(fields: [buyerId], references: [id])

  items       OrderItem[]
  history     OrderStatusHistory[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OrderStatusHistory {
  id             String      @id @default(uuid())
  orderId        String
  order          Order       @relation(fields: [orderId], references: [id])
  
  previousStatus OrderStatus?
  newStatus      OrderStatus
  changedById    String
  reason         String?
  
  createdAt      DateTime    @default(now())
}

model OrderItem {
  id        String   @id @default(uuid())
  quantity  Int
  price     Float
  
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}

model AdminActionLog {
  id          String   @id @default(uuid())
  action      String   // e.g., "APPROVE_PLACEMENT", "REJECT_SUPPLIER"
  entityType  String   // e.g., "ProductPlacement", "Supplier"
  entityId    String
  details     Json?
  
  adminId     String
  admin       User     @relation("AdminActions", fields: [adminId], references: [id])
  
  createdAt   DateTime @default(now())
}
